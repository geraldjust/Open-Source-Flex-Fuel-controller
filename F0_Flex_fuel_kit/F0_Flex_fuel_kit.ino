  flexFuelServiceFnTbl[FF_HDLR_FAILSAFE]         = checkFailsafeValues;
  flexFuelServiceFnTbl[FF_HDLR_BT]               = serviceBluetooth;

  /* Debug features: Only used for debugging. */
#ifdef DEBUG
  initAndRegisterSerialTerminalDebug();
#endif
}

/************************************************
   Setup: software entry point.
 ************************************************/
void setup(void)
{
  SETUP_ISR();
  registerServiceFns();
  CAN_INIT();


  /* Run loop(). */
}

/************************************************
   Main service loop
 ************************************************/
void loop(void)
{
  /* Service loop. */
  for (unsigned int i = 0; i < sizeof(flexFuelServiceFnTbl); i++)
  {
    if (flexFuelServiceFnTbl[i] != NULL)
    {
      flexFuelServiceFnTbl[i]();
    }
  }

  if ((millis() - canTime) > canInterval) {
    sendCanMsg();
    canTime = millis();
  }
}







void CAN_INIT() {
  bool ret = CANInit(CAN_500KBPS, 2);  // CAN_RX mapped to PB8, CAN_TX mapped to PB9
  pinMode(CAN_STBY_PORT, OUTPUT);//set the canbus tranciver to active
  digitalWrite(CAN_STBY_PORT, LOW);
}

void sendCanMsg() {
  CAN_msg_t CAN_TX_msg;
  CAN_TX_msg.len = 4;// 4 bytes total
  CAN_TX_msg.type = DATA_FRAME;
  CAN_TX_msg.format = STANDARD_FORMAT;
  CAN_TX_msg.id = 0x600;// we set can ID to 0x600
  CAN_TX_msg.data[0] = ethanol;
  CAN_TX_msg.data[1] = Temperature_C;
  CAN_TX_msg.data[2] = Temperature_F;
  bitWrite(CAN_TX_msg.data[3] , 0, isError);// we set bit0 of byte4 to the error flag
  CANSend(&CAN_TX_msg);
}
